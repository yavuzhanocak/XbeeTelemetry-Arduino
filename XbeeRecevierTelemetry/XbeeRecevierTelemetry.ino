String gelen_veri;

/*
------------------------------------------------------------------------------------------------------------
     SETUP: RUNS ONCE                       
------------------------------------------------------------------------------------------------------------
*/
void setup() {
  Serial.begin(9600);
}

/*
------------------------------------------------------------------------------------------------------------
     LOOP: RUNS CONSTANTLY                       
------------------------------------------------------------------------------------------------------------
*/
void loop()
{
 
  if (Serial.available())
  {  
    while (Serial.available())
    {
      char c = (char)Serial.read();
      gelen_veri += c;
      delay(2);
    }
    Serial.print(gelen_veri);
    Serial.print("\n");
  }
  gelen_veri = "";
}


